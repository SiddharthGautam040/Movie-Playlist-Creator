<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">
          <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-0"><%= link_to "Movies Finder", login_path ,class: "nav-link link-dark" %></span>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          <%= form_with(model: @user, local: true, data: { turbo: false }) do |f|%>
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign Up</h3>
            <%= render 'shared/flasherrors' %>
            <%= render 'shared/formerrors' %>
            <div class="form-outline mb-4">
              <%= f.text_field :name, class: "form-control form-control-lg", id: "form2Example18", placeholder: "Your Name" %>
              <%= f.label :name, class: "form-label" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.email_field :email, class: "form-control form-control-lg", id: "form2Example18", placeholder: "example@sample.com" %>
              <%= f.label :email, class: "form-label" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password, class: "form-control form-control-lg", id: "form2Example18" %>
              <%= f.label :password, class: "form-label" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password_confirmation, class: "form-control form-control-lg", id: "form2Example18" %>
              <%= f.label :password_confirmation, class: "form-label" %>
            </div>

            <div class="pt-1 mb-4">
              <%= f.submit "Create My Account", class: "btn btn-info btn-lg btn-block"%>
            </div>

            <p>Already have an account? <%= link_to "Login here", login_path, class: "link-info" %></p>

          <% end %>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/best-movies-1614634680.jpg"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>