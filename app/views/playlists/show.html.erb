<%= render 'shared/navbar' %>
<div class="text-center">
	<%if @playlist %>
		<h2><%= @playlist.title %></h2>
	<%end%>
</div>
<div class="container">
	<%if @playlist_items.length() == 0 %>
		<%if @delete_rights == true%>
			<h2 class="text-center mt-5"> This playlist is empty. Try <%= link_to "searching", search_path %> and adding some movies </h2>
		<%elsif @delete_rights == false %>
			<h2 class="text-center mt-5"> This playlist is empty.</h2>
		<%end%>
	<% end %>
	<div class="row row-cols-1 row-cols-md-3 g-4">
	  <% for movie in @playlist_items %>
		  <div class="col">
		    <div class="card h-100 " style="width: 18rem;">
      			<%= image_tag movie.poster,class: "card-img-top", alt: 'icon' %>
      			<div class="card-body">
        		<h5 class="card-title"><%= movie.title %></h5>
        		<p class="card-text"><%= movie.plot %></p>
      		</div>
      		<ul class="list-group list-group-flush">
	        	<li class="list-group-item">Year <%= movie.released %></li>
	        	<li class="list-group-item">Genre <%= movie.genere %></li>
	        	<li class="list-group-item">Awards <%= movie.awards %></li>
      		</ul>
      			<%if @delete_rights == true%>
		      		<div class="card-body">
		        		<%= button_to "Remove", deleteitem_path(movie), class: "btn btn-danger" , method: :delete %>
		      		</div>
		      	<%end%>
    		</div>
		  </div>
	  <% end %>
	</div>
</div>